<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.catchtable.clone.infrastructure.member.MemberRepository">
    <insert id="store" parameterType="com.catchtable.clone.domain.member.Member"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tbl_members (member_token, name, phone, password, nickname, status, created_at)
        VALUES (#{memberToken}, #{name}, #{phone}, #{password}, #{nickname}, #{status}, #{createdAt});
    </insert>

    <resultMap id="memberResultMap" type="com.catchtable.clone.domain.member.Member">
        <result column="member_token" property="memberToken"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <select id="login" parameterType="com.catchtable.clone.domain.member.Member"
            resultType="com.catchtable.clone.domain.member.Member"
            resultMap="memberResultMap">
        SELECT * FROM tbl_members WHERE (phone = #{loginId} OR nickname = #{loginId}) AND password = #{loginPw}
    </select>
